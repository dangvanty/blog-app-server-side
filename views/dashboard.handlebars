<div class="row">
  <div class="col-9">
    <section class="d-flex justify-content-between align-items-center mb-4">
      <h3>Welcome {{username}}</h3>
      <a href="/dashboard/new-post" class="btn btn-dark py-2">New Post</a>
    </section>
  
    <section>
      {{#if posts.length}}
      <h4 class="mb-2">Your Posts</h4>
  
      {{#each posts as |post|}}
      {{> post-dashboard-details}}
      {{/each}}
      {{/if}}
    </section>
  </div>
  <div class="col-3">
    <div class="card" style="width: 18rem;">
    <img src="/img/user.png" class="card-img-top" alt="avatar">
    <div class="card-body">
      <h5 class="card-title">{{profile.fullname}}</h5>
      <p class="card-text">SKILL : {{profile.skills}}</p>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">TEL : {{profile.tel}}</li>
      <li class="list-group-item">ADDRESS : {{profile.address}}</li>
    </ul>
    <div class="card-body d-flex justify-content-center">
      <a href="#" class="card-link btn btn-primary">EDIT</a>
    </div>
  </div>
  </div>
</div>
